<Window x:Class="Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui"
        mc:Ignorable="d"
        FontSize="14"
        Title="Find file duplicates" Height="800" Width="800" Icon="/research.png">
    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" MaxWidth="180"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" Margin="0,10,0,0">Search duplicate files in these directories:</TextBlock>
        <Grid Grid.Column="1" Grid.Row="1" Margin="5,5,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Grid.Column="0" x:Name="AddButton" Click="AddButton_Click">Add</Button>
            <Button Grid.Row="2" Grid.Column="0" x:Name="RemoveButton" Click="RemoveButton_Click">Remove</Button>
        </Grid>
        <ListBox x:Name="FoldersToSearchList" Grid.Column="0" Grid.Row="1" SelectionChanged="FoldersToSearchList_SelectionChanged"></ListBox>

        <Grid Grid.Row="2" Grid.Column="0" Margin="0,10,0,0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock>Min.Size:</TextBlock>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="MinFileSizeEntry" TextChanged="MinFileSizeEntry_TextChanged"></TextBox>
            <ComboBox Grid.Row="0" Grid.Column="2" x:Name="SizeUnitSelection" SelectionChanged="SizeUnitSelection_SelectionChanged">
                <ComboBoxItem>B</ComboBoxItem>
                <ComboBoxItem>kB</ComboBoxItem>
                <ComboBoxItem>MB</ComboBoxItem>
                <ComboBoxItem>GB</ComboBoxItem>
            </ComboBox>
        </Grid>
        <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,10,0,0">Duplicates:</TextBlock>
        <ListBox Grid.Row="4" Grid.Column="0" x:Name="DuplicateList" MouseDoubleClick="DuplicateList_MouseDoubleClick"
                 SelectionChanged="DuplicateList_SelectionChanged"></ListBox>
        <Grid Grid.Column="1" Grid.Row="4" Margin="5,5,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Grid.Column="0" x:Name="StartButton" Click="StartButton_Click">Start</Button>
            <Button Grid.Row="2" Grid.Column="0" x:Name="StopButton" Click="StopButton_Click">Stop</Button>
            <CheckBox Grid.Row="4" Grid.Column="0" x:Name="AskBeforeDeleteCheckBox">Ask before deleting.</CheckBox>
            <Button Grid.Row="5" Grid.Column="0" x:Name="DeleteButton" Click="DeleteButton_Click">Delete</Button>
        </Grid>
        <TextBlock Grid.Row="5" Grid.Column="0" x:Name="StatusText"/>
    </Grid>
</Window>
